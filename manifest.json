{
  "name": "Loadstone Extension",
  "version": "0.9.1",
  "manifest_version": 2,
  "description": "Loadstone Extension For Flickr",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions" : [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://jp.finalfantasyxiv.com/lodestone/*"],
      "js": ["jquery/jquery-3.2.1.min.js",
              "classes/Debug.class.js",
              "classes/DocumentObjectBase.class.js",
              "classes/Chrome.class.js",
              "classes/Flickr.class.js",
              "classes/ModalWindow.class.js",
              "classes/FlickrWindows.class.js",
              "classes/FlickrButton.class.js",
              "main.js"],
      "css": ["modal-test.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "hot-reload.js"
    ]
  },
  "options_page":"options.html"
}
