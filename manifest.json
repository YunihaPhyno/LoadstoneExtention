{
  "name": "Loadstone Extension",
  "version": "0.9.0",
  "manifest_version": 2,
  "description": "Loadstone Extension For Flickr",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions" : [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://jp.finalfantasyxiv.com/lodestone/my/blog/post/"],
      "js": ["jquery/jquery-3.2.1.min.js","main.js"],
      "css": ["modal-test.css"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "hot-reload.js"
    ]
  },
  "options_page":"options.html"
}